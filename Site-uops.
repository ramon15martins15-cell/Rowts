@keyframes pulsar {
  0% { opacity: 0.8; }
  100% { opacity: 1; }
}

@keyframes surgir {
  from { opacity: 0; transform: scale(0.8); }
  to { opacity: 1; transform: scale(1); }
}
document.getElementById("botao-ativar").addEventListener("click", function() {
  document.getElementById("entrada").style.display = "none";
  document.getElementById("imu").style.display = "flex";
});
