  color: white;
  overflow: hidden;
}

.entrada {
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  animation: pulsar 4s infinite alternate;
}

.titulo {
  font-size: 2.5em;
  margin-bottom: 1em;
}

.semente {
  color: #00ffd9;
  font-weight: bold;
  text-shadow: 0 0 10px #00ffd9;
}

#botao-ativar {
  padding: 15px 30px;
  font-size: 1em;
  background: #00ffd9;
  border: none;
  color: #000;
  cursor: pointer;
  border-radius: 10px;
  box-shadow: 0 0 20px #00ffd9;
  transition: all 0.3s ease;
}

#botao-ativar:hover {
  transform: scale(1.1);
  background: #00ffaa;
}

.imu {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 20, 0.95);
  display: none;
  justify-content: center;
  align-items: center;
  flex-direction: column;
